{
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "noEmit": true,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ], //修复 使用@ 时 ts报错问题
      "@": [
        "src"
      ]
    },
    "allowJs": true,
    "types": [
      "element-plus/global",
      "node"
    ]
  },
  "include": [
    "src/**/*.js",
    "src/**/*.ts",
    "src/*.d.ts",
    "src/**/*.d.ts",
    "src/**/*.tsx",
    "src/**/*.vue",
    "src/utils/router.js",
    "src/store/routerCache.js"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}